{
    "compilerOptions": {
        "target": "ES2022",
        "useDefineForClassFields": true,
        "module": "ESNext",
        "resolveJsonModule": true,
        "moduleResolution": "bundler",
        "baseUrl": ".",
        "paths": {
            "@/*": ["./ui/*"]
        },
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true
    },
    "include": ["ui/**/*"],
    "exclude": ["node_modules", "dist", "js", "web"]
}
